{
    "name": "ibexa/cron",
    "description": "Simple cron bundle for Ibexa",
    "homepage": "https://github.com/ezsystems/ezplatform-cron",
    "license": "GPL-2.0-only",
    "type": "ibexa-bundle",
    "authors": [
        {
            "name": "eZ dev-team & eZ Community",
            "homepage": "https://github.com/ezsystems/ezplatform-cron/contributors"
        }
    ],
    "replace": {
        "ezsystems/ezstudio-cron": "*",
        "ezsystems/ezplatform-cron": "*"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformCronBundle\\": "src/bundle",
            "Ibexa\\Cron\\": "src/lib/",
            "Ibexa\\Bundle\\Cron\\": "src/bundle/",
            "Ibexa\\Contracts\\Cron\\": "src/contracts/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EzSystems\\EzPlatformCronBundle\\Tests\\": "tests/CronBundle",
            "Ibexa\\Tests\\Bundle\\Cron\\": "tests/bundle/",
            "Ibexa\\Tests\\Cron\\": "tests/lib/"
        }
    },
    "require": {
        "php": "^7.4",
        "cron/cron": "^1.4",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "symfony/console": "^5.0",
        "symfony/config": "^5.0",
        "symfony/process": "^5.0",
        "ibexa/core": "^4.0@dev"
    },
    "require-dev": {
        "ibexa/code-style": "^1.0",
        "ibexa/doctrine-dbal-schema": "^4.0@dev",
        "friendsofphp/php-cs-fixer": "^2.16.3",
        "phpunit/phpunit": "^6.4 || ^7.0"
    },
    "scripts": {
        "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.0.x-dev"
        }
    }
}
